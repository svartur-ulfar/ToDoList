@model IEnumerable<ToDoList.Models.ToDo>


<div id="progressBarToDo">

    <p>@(ViewBag.Percent)%
    </p> @*this should read the precent values of completeness*@
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                <div class="CompletedTodo">
                    @Html.DisplayFor(modelItem => item.Description)
                </div>
                }
                
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@*adding this script to the table for the events listeners to be added
any time this table is created*@

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>
